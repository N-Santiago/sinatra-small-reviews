<h1>Edit Your Small Review</h1>

<p><form action="/reviews/<%= @review.id %>" method="POST">
      <input id="hidden" type="hidden" name="_method" value="PATCH">
      <label for "title">Title: </label>
      <input type="text" id="title" name="title" value="<%= @review.title %>">
      <br />
      <br>
  <select id="category" name="category">
    <option>--Genre--</option> 
    <%Category.all.each do |category| %>
    <option value="<%=category.name%>"><%=category.name%></option>
    <%end%>
    required
  </select>
      <br>    
      <br>
      <label for "content">Content:</label>
      <br>
      <textarea name="content" style="margin: 0px; height: 225px; width: 250px;" value="<%= @review.content %>" required><%= @review.content %></textarea>
      <br>
      <input type="submit" value="submit" id="submit">
</form></p>